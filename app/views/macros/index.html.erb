<div class="container">
  <div class="row justify-content-center">
    <div class="col-xs-12 col-sm-6 col-sm-offset-6">
      <div class="container d-flex justify-content-between" style="margin-top: 20px">
        <h1> Your Macros Plan: </h1>
        <%= link_to new_macro_path do %><i class="fas fa-plus-square" style="font-size: 40px; color: #283c63"></i><% end %>
      </div>
      <input type="hidden" id="macroIDs" value="<%= @macro_string %>">

      <table class="table table-hover" style="margin-top: 20px" data-controller="profile">
        <thead>
          <tr class="table-info" style="color: white">
            <th scope="col"></th>
            <th scope="col" style="color: white">Protein</th>
            <th scope="col" style="color: white">Carbs</th>
            <th scope="col" style="color: white">Fats</th>
            <th scope="col" style="color: #404b69">Edit</th>

            <th scope="col" <% if @macro.count > 1 %>
            style="color: #404b69"
            <% else %>
            style="color: #FFCDD2"
            <% end %>> Delete</th>

            <th scope="col" <% if @macro.count > 1 %>
            style="color: #404b69"
            <% else %>
            style="color: #FFCDD2"
            <% end %>> Default</th>

          </tr>
        </thead>
        <tbody>
          <% @macro.each do |macro| %>
            <% if current_user.default_macro == macro %>
              <tr id="row-<%=macro.id%>">
                <th scope="row" class="macros default-macros"><%= macro.name %></th>
                <td class="macros default-macros"><%= macro.protein.to_i %></td>
                <td class="macros default-macros"><%= macro.carbs.to_i %></td>
                <td class="macros default-macros"><%= macro.fats.to_i %></td>
                <td><%= link_to edit_macro_path(macro) do %><i class="fas fa-pen"> </i><% end %>
                <td>
                    <% if @macro.count > 1 %>
                      <%= link_to macro_path(macro), method: :delete do %>
                        <i class="fas fa-trash"> </i>
                      <% end %>
                    <% end %>
                </td>

                <td class="form-check">
                  <input class="form-check-input" type="radio" name="default" data-target="macroOptions" data-action="change->profile#changeDefault" id="<%=macro.id%>" value="<%=macro.id%>" checked>
                </td>
              </tr>
            <% else %>
              <tr id="row-<%=macro.id%>">
                <th scope="row" class="macros"><%= macro.name %></th>
                <td class="macros"><%= macro.protein.to_i %></td>
                <td class="macros"><%= macro.carbs.to_i %></td>
                <td class="macros"><%= macro.fats.to_i %></td>
                <td><%= link_to edit_macro_path(macro) do %><i class="fas fa-pen"> </i><% end %>
                <td>
                    <% if @macro.count > 1 %>
                      <%= link_to macro_path(macro), method: :delete do %>
                        <i class="fas fa-trash"> </i>
                      <% end %>
                    <% end %>
                </td>

                <td class="form-check">
                  <input class="form-check-input" type="radio" name="default" data-target="macroOptions" data-action="change->profile#changeDefault" id="radio-<%=macro.id%>" value="<%=macro.id%>">                  
                </td>
              </tr>
            <% end %>
          <% end %>
        </tbody>
      </table>

    </div>
  </div>
</div>
